<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebUygulamaGelistirmeVize</title> <!--Sayfanin sekme basligini degistirdim -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-light"> <!--Baslik kisminin arka planina renk ekledim-->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" >
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="background-color: #ffe8f8; font-size:20px; font-family:Verdana;">
                    <!--yazi tipi , arka plan rengi , yazi rengini degistirdim-->
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <!--Menuleri orta kısıma aldım -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Stok" asp-action="Durum">Stok Durumu</a>
                            <!--controller olarak StokController kullanilacak  method olarak da Durum kullanilacak-->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Personel" asp-action="Listele">Personellerimiz</a>
                            <!--controller olarak PersonelController kullanilacak  method olarak da Listele kullanilacak-->
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="background-color: #fffdf0 "> <!--arka plan rengi ekledim-->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Alt Kisim-->
    <footer class="border-top footer text-muted">
        <div class="container" style="background-color: #ffe8f8; color:black; font-family:Verdana"> <!--yazi tipi , arka plan rengi , yazi rengini degistirdim-->
            &copy; 2021 - WebUygulamaGelistirmeVize - Barış Turgut <!--Yazilari Ekledim-->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
